{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "create-feature-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "x-prompt": {
        "message": "Select which directory you want to add the feature lib",
        "type": "list",
        "items": [{
          "value": "store",
          "label": "store"
        },
        {
          "value": "api",
          "label": "api"
        },
        {
          "value": "shared",
          "label": "shared"
        }]
      },
      "enum": ["store", "api", "shared"]
    }
  },
  "required": ["name"]
}
